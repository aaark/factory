<% provide(:title, 'Update Users profile') %>
<h1>Update a user</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table>
      <%= form_for(@user) do |f| %>
          <tr>

            <td><%= f.label :name %></td>
            <td><%= f.text_field :name %> </td>
          </tr>
          <tr>

            <td><%= f.label :email %></td>
            <td><%= f.email_field :email %></td>
          </tr>
          <tr>

            <td><%= f.label :password %></td>
            <td><%= f.password_field :password %></td>
          </tr>
          <tr><td><%= f.submit "Update", class: "btn btn-primary" %></td></tr>
      <% end %>

    </table>

  </div>
</div>