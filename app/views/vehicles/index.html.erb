<h1> Vehicle information </h1>
<table border="1" class="table">
  <tr>
    <th>Id</th>
    <th>Color</th>
    <th>Name</th>
    <th>Weight_Occupants</th>
    <th>Fuel</th>
    <th>PowerRating</th>
    <% if current_user.admin == true%>
        <th>Edit</th>
        <th>Delete</th>

  <%end%>
  </tr>
  <% @vehicle.each do |vech|%>
      <tr>
        <td><%= vech.id%></td>
        <td><%= vech.color%></td>
        <td><%= vech.type_name%></td>
        <td><%= vech.wt_oc%></td>
        <td><%= vech.fuel%></td>
        <td><%= vech.power_rating%></td>
        <% if current_user.admin == true%>
            <td><%= link_to ( image_tag "edit.jpg", width:'25', height:'25' ), edit_vehicle_path(vech) %></td>
            <td><%= link_to ( image_tag "delete.jpg", width:'25', height:'25' ), vech, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      <%end%>
      </tr>
  <%end%>
</table>



